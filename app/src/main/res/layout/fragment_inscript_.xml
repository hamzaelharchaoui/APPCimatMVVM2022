<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Proj_fragment.Inscript_Frag">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/root_layout"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            >

            <RelativeLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_view_logo"
                    android:layout_width="200dp"
                    android:layout_height="144dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:padding="12dp"
                    android:src="@drawable/logocmt"

                    />
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:id="@+id/linearLayout1"
                    android:layout_below="@+id/image_view_logo"

                    >



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout1"
                    android:layout_marginTop="60dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"

                    >


                    <EditText
                        android:id="@+id/txtmatriculeinscp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp"
                        android:drawablePadding="1dp"
                        android:hint="Matrucle"
                        android:inputType="text"
                        android:padding="12dp"
                        android:text=""

                        />
                    <EditText
                        android:id="@+id/txtNomPrenominscrp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:drawablePadding="1dp"
                        android:hint="Nom et Prenom"
                        android:inputType="text"
                        android:padding="12dp"
                        android:text=""

                        />


                    <EditText
                        android:id="@+id/txtPassordinscription1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Saisir Votre Password"
                        android:inputType="textPassword"
                        android:padding="15dp"

                        />
                    <EditText
                        android:id="@+id/txtPassordinscription2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Ressaisir votre mot de passe"
                        android:inputType="textPassword"
                        android:padding="15dp"
                        />
                    <EditText
                        android:id="@+id/txtNtelphone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Saisir votre  Tel :212"
                        android:inputType="phone"
                        android:padding="15dp"
                        />


                    <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="80dp"
                        android:layout_marginBottom="20dp"
                        android:background="#FFF"
                        android:text="Sing Up "
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title" />

                </LinearLayout>


            </RelativeLayout>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="108dp"
                android:layout_height="117dp"
                android:layout_gravity="center_vertical|center_horizontal" />



        </android.support.design.widget.CoordinatorLayout>

    </LinearLayout>

</FrameLayout>